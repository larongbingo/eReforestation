  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jest tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}\\src\\server\\node_modules\\jest\\bin\\jest.js",
      "args": [
        "--runInBand",
        "--no-cache"
      ],
      "runtimeArgs": [
        "--inspect-brk"
      ],
      "cwd": "${workspaceRoot}\\src\\server",
      "protocol": "inspector",
      "console": "integratedTerminal"
    }
  ]
}